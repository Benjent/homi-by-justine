---
import { marked } from "marked";
import type Article from "../../interfaces/article";
import Layout from "../../layouts/Layout.astro";
import fetchApi from "../../lib/strapi";
import StrapiBlock from "../../components/StrapiBlock.astro";

export async function getStaticPaths() {
    const articles = await fetchApi<Article[]>({
  endpoint: "articles",
  wrappedByKey: "data",
});

  return articles.map((article) => ({
    params: { slug: article.attributes.slug },
    props: article,
  }));
}
const article = Astro.props;
// const body = article.attributes.body && marked.parse(article.attributes.body)
---

<Layout title={article.attributes.title}>
  <h1>{article.attributes.title}</h1>
  <!-- <article set:html={body} /> -->
   <!-- <article>{article.attributes.body[0].children[0]}</article> -->
   <article>{article.attributes.body.map((block) => <StrapiBlock block={block} />)}</article>
</Layout>
